<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.popularmovies.MovieActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="9dp"
            tools:text="TextView" />

        <ImageView
            android:id="@+id/imageViewMovieActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/header_text"
            android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/header_text"
            android:layout_alignStart="@+id/header_text"
            android:layout_alignTop="@+id/textViewRelease"
            android:text="@string/release_date" />

        <TextView
            android:id="@+id/textViewRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textView_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            tools:text="overview" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="16dp"
            android:text="@string/plot" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_overview"
            android:layout_alignStart="@+id/textView_overview"
            android:layout_below="@+id/textView_overview"
            android:layout_marginTop="13dp"
            android:text="@string/rating" />

        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            tools:text="TextView" />
        <TextView
            android:id="@+id/trailerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/push_here_to_watch_a_trailer"
            android:layout_below="@id/textViewRating"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/reviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/push_here_to_read_review"
            android:layout_below="@id/trailerTextView"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:textColor="@android:color/holo_blue_dark"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#999999"
            app:srcCompat="@drawable/ic_star_empty"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/favoriteButton" />

    </RelativeLayout>

</ScrollView>
